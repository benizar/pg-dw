EXTENSION = pg_popyramids_setup
EXTVERSION = $(shell grep default_version $(EXTENSION).control | sed -e "s/default_version[[:space:]]*=[[:space:]]*'\([^']*\)'/\1/")

PG_CONFIG = pg_config
PG93 = $(shell $(PG_CONFIG) --version | egrep " 8\.| 9\.0| 9\.1| 9\.2" > /dev/null && echo no || echo yes)

ifeq ($(PG93),yes)
DOCS = $(wildcard doc/*.md)

all: sql/setup/$(EXTENSION)--$(EXTVERSION).sql

sql/setup/$(EXTENSION)--$(EXTVERSION).sql: sql/setup/triggers/*.sql sql/setup/indexes/*.sql
	cat $^ > $@

DATA = $(wildcard updates/*--*.sql) sql/setup/$(EXTENSION)--$(EXTVERSION).sql
EXTRA_CLEAN = sql/setup/$(EXTENSION)--$(EXTVERSION).sql
else
$(error Minimum version of PostgreSQL required is 9.3.0)
endif


PGXS := $(shell $(PG_CONFIG) --pgxs)
include $(PGXS)
